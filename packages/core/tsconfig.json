{
  "compilerOptions": {
    "incremental": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "composite": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "target": "es6",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "$thispkg": ["."]
    },
    "outDir": "./dist/es6"
  },
  "include": [
    "src",
    "test"
  ]
}
