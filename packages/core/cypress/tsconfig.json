{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "$thispkg": ["../src"],
      "$thispkg/*": ["../src/*"]
    },
  },
  "include": [
    "**/*.ts",
    "../src"
  ]
}
